# FastAPI
PORT=10000

# DB (SQLite by default; replace with your Render Postgres URL in production)
DATABASE_URL=sqlite:///./pos.sqlite

# ISO8583 switch / acquirer connection
ISO_TCP_HOST=127.0.0.1
ISO_TCP_PORT=5000

# Message Authentication Code key (hex). Replace in prod.
MAC_HEX_KEY=00112233445566778899AABBCCDDEEFF

# Payout defaults
DEFAULT_PAYOUT_METHOD=BANK   # BANK or CRYPTO
DEFAULT_PAYOUT_TARGET=GB29NWBK60161331926819

# JWT secret
JWT_SECRET=your-secret-key-here
